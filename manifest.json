{
  "manifest_version" : 2,
  "name": "Weather Report",
  "version": "0.1",

  "description": "Keep up with the Weather.",
  "icons": { "16" : "images/48.png",
 			"48" : "images/48.png",
			"128" : "images/48.png"},
	"background": {
    "page" : "background.html" },
	"permissions": [
    "geolocation",
    "http://api.openweathermap.org/data/2.5/*"
	],
	"browser_action": {
    "default_icon": "images/48.png", 
    "default_title": "Weather Notifier",      
    "default_popup": "popup.html"       
  }
}
